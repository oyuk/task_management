<h1><%= @group.title %></h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>id</th>
    <th>タイトル</th>
    <th>内容</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @group.tasks.each do |task|  %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
      <td>
        <%= link_to 'edit',edit_task_path(task) ,:class => 'btn btn-default btn-xs' %>
        <%= link_to 'destroy',task,method: :delete,data:{confirm:'Are you sure?'} , :class => 'btn btn-xs btn-danger'%>
      </td>
      </tr>
  <% end  %>
  </tbody>
</table>
